<% if @location.errors.any? %>
  <ul>
  <% @location.errors.full_messages.each do | error_messages | %>
    <li><%= error_messages %> </li>
  <% end %>
  </ul>
<% end %>

<%= form_for [@location], :html => { :multipart => true } do |f| %>
  <%= f.label :name  %>
  <%= f.text_field :name %>
<br/>
  <%= f.label :city  %>
 <%= f.text_field :city %>
<br/>
  <p>
  <%= f.file_field :avatar %>
  </p>
  <%= f.submit "Save" %>
<% end %>